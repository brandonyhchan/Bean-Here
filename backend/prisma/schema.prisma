generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  userName  String  @unique
  email     String  @unique
  firstName String
  lastName  String
  password  String
  photoName String?
  photoURL  String?
}

model Cafe {
  id              Int            @id @default(autoincrement())
  stringId        String         @unique
  name            String
  street          String
  city            String
  province        String
  postalCode      String
  phoneNumber     String?
  website         String?
  profilePhotoURL String?
  location        Location?
  busyness        String?
  noisiness       String?
  busynessOption  FilterOption? @relation("BusynessOptions", fields: [busyness], references: [level])
  noisinessOption FilterOption? @relation("NoisinessOptions", fields: [noisiness], references: [level])
  provinceCode    ProvinceCode @relation("CafeProvince", fields: [province], references: [code])
}

model Location {
  id        Int   @id @default(autoincrement())
  latitude  Float @unique
  longitude Float @unique
  cafeId    Int   @unique
  Cafe      Cafe  @relation(fields: [cafeId], references: [id])
}

model FilterOption {
  level String @id
  cafesBusyness Cafe[] @relation("BusynessOptions")
  cafesNoisiness Cafe[] @relation("NoisinessOptions")
}

model ProvinceCode {
  code String @id
  cafesProvinces Cafe[] @relation("CafeProvince")
}
