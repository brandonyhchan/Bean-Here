generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  userName  String  @unique
  email     String  @unique
  firstName String
  lastName  String
  password  String
  photoName String?
  photoURL  String?
}

model Cafe {
  id              Int              @id @default(autoincrement())
  stringId        String           @unique
  name            String
  street          String
  city            String
  province        String
  postalCode      String
  phoneNumber     String?
  website         String?
  profilePhotoURL String?
  location        Location?
  busyness        String?
  noisiness       String?
  provinceCode    ProvinceCode     @relation("CafesProvince", fields: [province], references: [code])
  busynessLevel   BusynessOption?  @relation("CafesBusyness", fields: [busyness], references: [level])
  noisinessLevel  NoisinessOption? @relation("CafesNoisiness", fields: [noisiness], references: [level])
}

model Location {
  id        Int   @id @default(autoincrement())
  latitude  Float @unique
  longitude Float @unique
  cafeId    Int   @unique
  Cafe      Cafe  @relation(fields: [cafeId], references: [id])
}

model ProvinceCode {
  code  String @id
  cafes Cafe[] @relation("CafesProvince")
}


model BusynessOption {
  level String @id
  cafes Cafe[] @relation("CafesBusyness")
}

model NoisinessOption {
  level String @id
  cafes Cafe[] @relation("CafesNoisiness")
}
